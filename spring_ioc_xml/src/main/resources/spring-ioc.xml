<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="studentOne" class="com.izumi.spring.pojo.Student"></bean>
    <bean id="studentTwo" class="com.izumi.spring.pojo.Student">
        <!--
            property: 通过成员变量的set方法进行赋值
            name: 设置需要赋值的属性名（和set方法有关）
            value: 设置为属性所赋的值
        -->
        <property name="sid" value="1001"></property>
        <property name="sname" value="张三"></property>
        <property name="age" value="23"></property>
        <property name="gender" value="男"></property>
    </bean>

    <bean id="studentThree" class="com.izumi.spring.pojo.Student">
        <constructor-arg value="1002"></constructor-arg>
        <!--
            <: &lt;
            >: &gt;
            CDATA节中的内容会原样解析<![CDATA[...]]>
        -->
        <!--<constructor-arg value="&lt;李四&gt;"></constructor-arg>-->
        <constructor-arg>
            <value>
                <![CDATA[<王五>]]>
            </value>
        </constructor-arg>
        <constructor-arg value="24" name="age"></constructor-arg>
        <constructor-arg name="gender">
            <null />
        </constructor-arg>
    </bean>

    <bean id="studentFive" class="com.izumi.spring.pojo.Student">
        <property name="sid" value="1004"></property>
        <property name="sname" value="zhangsan"></property>
        <property name="age" value="26"></property>
        <property name="gender" value="男"></property>
        <!--
            ref: 引用IOC容器中的某个bean的id
        -->
        <property name="clazz" ref="clazzOne"></property>
    </bean>

    <bean id="clazzOne" class="com.izumi.spring.pojo.Clazz">
        <property name="cid" value="1111"></property>
        <property name="cname" value="大班"></property>
    </bean>
</beans>